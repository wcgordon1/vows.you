---
// Fundations
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const quotes = [
  "Finally found my words.",
  "I cried writing them.",
  "Everyone was in tears.",
  "Worth every minute.",
  "My partner loved it.",
  "So much easier than expected.",
  "Felt like me.",
  "Our guests still talk about it.",
  "No writer's block.",
  "Captured our story perfectly.",
  "I actually enjoyed writing them.",
  "Better than I imagined.",
];
---

<section>
  <Wrapper variant="standard" class="relative overflow-hidden border-t">
    <div class="relative flex items-center py-6 overflow-hidden">
      <div class="flex gap-8 whitespace-nowrap" style="animation: marquee 45s linear infinite;">
        {
          quotes.map((quote) => (
            <span class="text-sm text-base-600 italic">"{quote}"</span>
          ))
        }
        {
          quotes.map((quote) => (
            <span class="text-sm text-base-600 italic">"{quote}"</span>
          ))
        }
      </div>
    </div>
    <div
      class="absolute inset-0 w-full bg-gradient-to-r from-white from-5% via-transparent to-white to-95% pointer-events-none"
    >
    </div>
  </Wrapper>
</section>
