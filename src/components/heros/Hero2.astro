---
// Assets
import { Image } from "astro:assets";
import Dashboard from "@/images/assets/dashboard.jpg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="pt-32 pb-4 overflow-hidden">
    <div class="grid gap-12 grid-cols-1 lg:grid-cols-3">
      <div class="flex flex-col justify-between h-full">
        <div class="text-center text-balance">
          <Text
            tag="h1"
            variant="displayMD"
            class="font-serif font-medium tracking-tight text-black"
          >
            Wedding vows that feel true to you
          </Text>
          <Text tag="p" variant="textBase" class="max-w-xl mt-4 text-base-500">
            Get the structure and prompts you need to say what you actually mean. Personal, not generic. Ceremony-ready.
          </Text>
        </div>

        <div
          class="flex flex-wrap items-center justify-center w-full mt-10 just gap-2"
        >
          <Button isLink size="sm" variant="accent" href="#pricing-section">Start writing</Button>
          <Button isLink size="sm" variant="muted" href="/blog">See examples</Button
          >
        </div>
      </div>
      <Image
        src={Dashboard}
        alt="Couple's hands exchanging rings during ceremony"
        class="w-full h-auto rounded-xl lg:col-span-2 lg:-mb-12"
      />
    </div>
  </Wrapper>
</section>
