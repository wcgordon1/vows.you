---
// Assets
import { Image } from "astro:assets";
import Dashboard from "@/images/assets/dashboard.jpg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section>
  <Wrapper variant="standard" class="pt-32 pb-4">
    <div class="text-center text-balance">
      <Text
        tag="h1"
        variant="displayMD"
        class="font-serif font-medium tracking-tight text-black"
      >
      Write Wedding Vows Youâ€™re Proud to Read Out Loud
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="max-w-4xl mx-auto mt-4 text-base-500"
      >
      Guided questions to draw out your most meaningful memories and turn them into heartfelt wedding vows.
      </Text>
    </div>
    <div
      class="flex flex-wrap items-center justify-center w-full mt-10 just gap-2"
    >
      <Button isLink size="sm" variant="accent" href="https://app.vows.you/workspace">Start writing</Button>
      <Button isLink size="sm" variant="muted" href="/free-wedding-vow-review">Free Vow Review</Button>
    </div>
    <p class="mt-4 text-sm text-base-400 text-center">Free to start. No email required.</p>
    <Image
      src={Dashboard}
      alt="Notebook with handwritten wedding vows on a linen surface"
      class="w-full h-auto mt-8 rounded-xl"
    />
  </Wrapper>
</section>
