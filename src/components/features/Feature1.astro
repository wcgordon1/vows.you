---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const steps = [
  {
    number: "01",
    title: "Answer a few prompts",
    description:
      "We ask thoughtful questions about your relationship, your partner, and the promises you want to make. No pressure, just reflection.",
  },
  {
    number: "02",
    title: "Shape your words",
    description:
      "Your answers become the foundation. We help you organize thoughts into structure: an opening, your story, your promises, and a close.",
  },
  {
    number: "03",
    title: "Practice and refine",
    description:
      "Read them aloud. Edit until they feel right. Time them. When you're ready, you'll know. And you'll speak with confidence.",
  },
];
---

<section class="overflow-hidden">
  <Wrapper variant="standard" class="py-16 border-t">
    <div class="text-center text-balance">
      <Text
        tag="h2"
        variant="displaySM"
        class="font-serif font-medium tracking-tight text-black"
      >
        Your vows, step by step
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="max-w-xl mx-auto mt-4 text-base-500"
      >
        Start with a simple prompt. Build structure. Add your memories, your
        voice, your story. We help you organize the words already inside you.
      </Text>
    </div>

    <div class="grid gap-8 mt-12 md:grid-cols-3">
      {
        steps.map((step) => (
          <div class="relative p-6 bg-sand-50 rounded-2xl">
            <span class="text-4xl font-serif text-sand-300">{step.number}</span>
            <Text
              tag="h3"
              variant="textLG"
              class="mt-4 font-medium text-black"
            >
              {step.title}
            </Text>
            <Text tag="p" variant="textSM" class="mt-2 text-base-500">
              {step.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
