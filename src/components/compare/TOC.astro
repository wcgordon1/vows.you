---
interface Props {
  competitorName: string;
}

const { competitorName } = Astro.props;

const items = [
  { id: "overview", label: `Overview: Vows.you vs ${competitorName}` },
  { id: "strengths", label: `What Vows.you and ${competitorName} each do well` },
  { id: "drawbacks", label: `Biggest drawbacks of ${competitorName}` },
  { id: "vows-you-features", label: "Vows.you features that matter in real ceremonies" },
  { id: "writing-quality", label: `Writing quality: Vows.you vs ${competitorName}` },
  { id: "cliches", label: `Cliches and common vow mistakes` },
  { id: "length", label: "Length and pacing" },
  { id: "practice", label: "Practicing and delivery" },
  { id: "printing", label: "Printing and vow cards" },
  { id: "pricing", label: `Pricing and access` },
  { id: "author-take", label: "My take after reading a lot of vows" },
  { id: "who-should-pick", label: `Who should pick Vows.you vs ${competitorName}` },
  { id: "final-verdict", label: `Final verdict` },
  { id: "faq", label: "FAQ" },
];
---

<nav class="mt-10" aria-label="Table of contents">
  <p class="text-sm font-medium text-base-700">On this page</p>
  <ol class="mt-3 space-y-1.5 list-none pl-0">
    {
      items.map((item) => (
        <li>
          <a
            href={`#${item.id}`}
            class="text-sm text-base-500 hover:text-accent-500 transition-colors border-b border-transparent hover:border-accent-500"
          >
            {item.label}
          </a>
        </li>
      ))
    }
  </ol>
</nav>
