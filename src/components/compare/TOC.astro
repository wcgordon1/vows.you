---
interface Props {
  competitorName: string;
}

const { competitorName } = Astro.props;

const items = [
  { id: "overview", label: `Overview` },
  { id: "strengths", label: `Strengths` },
  { id: "drawbacks", label: `Drawbacks` },
  { id: "vows-you-features", label: "Key features" },
  { id: "writing-quality", label: `Writing quality` },
  { id: "cliches", label: `Cliches` },
  { id: "length", label: "Length" },
  { id: "practice", label: "Practice" },
  { id: "printing", label: "Printing" },
  { id: "pricing", label: `Pricing` },
  { id: "author-take", label: "Author take" },
  { id: "who-should-pick", label: `Who to pick` },
  { id: "final-verdict", label: `Verdict` },
  { id: "faq", label: "FAQ" },
];
---

<nav class="mt-10 py-4 border-y border-base-200" aria-label="Table of contents">
  <div class="flex flex-wrap items-center gap-x-1 gap-y-1.5">
    <span class="text-xs font-medium text-base-400 uppercase tracking-wide mr-2 shrink-0">Jump to</span>
    {
      items.map((item, i) => (
        <>
          <a
            href={`#${item.id}`}
            class="text-xs text-base-500 hover:text-accent-500 transition-colors px-2 py-1 rounded-md hover:bg-sand-50"
          >
            {item.label}
          </a>
          {i < items.length - 1 && <span class="text-base-200 select-none">&#183;</span>}
        </>
      ))
    }
  </div>
</nav>
