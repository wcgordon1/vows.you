---
import Text from "@/components/fundations/elements/Text.astro";

interface Props {
  competitorName: string;
}

const { competitorName } = Astro.props;

const items = [
  { id: "overview", label: "Overview" },
  { id: "strengths", label: "Strengths" },
  { id: "drawbacks", label: "Drawbacks" },
  { id: "vows-you-features", label: "Key features" },
  { id: "writing-quality", label: "Writing quality" },
  { id: "cliches", label: "Cliches" },
  { id: "length", label: "Length" },
  { id: "practice", label: "Practice" },
  { id: "personalization", label: "Personalization" },
  { id: "pricing", label: "Pricing" },
  { id: "author-take", label: "Author take" },
  { id: "who-should-pick", label: "Who to pick" },
  { id: "final-verdict", label: "Verdict" },
  { id: "faq", label: "FAQ" },
];
---

<nav class="py-5 border-b border-base-200 lg:sticky lg:top-20 lg:z-10 lg:bg-white" aria-label="Table of contents">
  <Text tag="h2" variant="textLG" class="font-medium text-base-800 mb-4">
    Jump to
  </Text>
  <div class="flex flex-wrap gap-2">
    {
      items.map((item) => (
        <a
          href={`#${item.id}`}
          class="text-sm text-base-600 px-3 py-1.5 rounded-full bg-sand-50 hover:bg-accent-50 hover:text-accent-600 transition-colors"
        >
          {item.label}
        </a>
      ))
    }
  </div>
</nav>
