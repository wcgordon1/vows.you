---
import Text from "@/components/fundations/elements/Text.astro";

interface Props {
  competitorName: string;
  competitorUrl: string;
  summary: string;
  bestForCompetitor: string;
  bestForVowsYou: string;
}

const {
  competitorName,
  competitorUrl,
  summary,
  bestForCompetitor,
  bestForVowsYou,
} = Astro.props;
---

<div class="p-6 mt-8 bg-sand-50 rounded-2xl">
  <p class="text-xs font-medium uppercase tracking-wide text-accent-500 mb-3">Quick verdict</p>
  <Text tag="p" variant="textBase" class="text-base-700 leading-relaxed">
    {summary}
  </Text>
  <div class="mt-5 grid gap-3 sm:grid-cols-2">
    <div class="p-4 bg-white rounded-xl">
      <p class="text-xs font-medium uppercase tracking-wide text-base-400 mb-1.5">Pick <a href={competitorUrl} target="_blank" rel="noopener noreferrer" class="hover:text-accent-500 transition-colors">{competitorName}</a></p>
      <p class="text-sm text-base-600">{bestForCompetitor}</p>
    </div>
    <div class="p-4 bg-white rounded-xl border border-accent-100">
      <p class="text-xs font-medium uppercase tracking-wide text-accent-500 mb-1.5">Pick vows.you</p>
      <p class="text-sm text-base-600">{bestForVowsYou}</p>
    </div>
  </div>
  <div class="mt-5">
    <a
      href="https://app.vows.you"
      class="inline-flex items-center gap-1.5 px-5 py-2.5 text-sm font-medium text-white bg-accent-500 rounded-full hover:bg-accent-600 transition-colors"
    >
      Start writing in the app
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14" />
        <path d="m12 5 7 7-7 7" />
      </svg>
    </a>
  </div>
</div>
