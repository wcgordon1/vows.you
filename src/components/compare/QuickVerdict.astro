---
import Text from "@/components/fundations/elements/Text.astro";

interface Props {
  competitorName: string;
  competitorUrl: string;
  summary: string;
  bestForCompetitor: string;
  bestForVowsYou: string;
}

const {
  competitorName,
  competitorUrl,
  summary,
  bestForCompetitor,
  bestForVowsYou,
} = Astro.props;
---

<div class="p-6 mt-8 bg-sand-100 rounded-xl">
  <Text tag="h2" variant="textLG" class="font-medium text-base-800">
    Quick verdict
  </Text>
  <Text tag="p" variant="textBase" class="mt-3 text-base-600">
    {summary}
  </Text>
  <div class="mt-4 space-y-2">
    <Text tag="p" variant="textSM" class="text-base-500">
      <strong class="text-base-700"><a href={competitorUrl} target="_blank" rel="noopener noreferrer" class="border-b border-base-400 hover:text-accent-500 hover:border-accent-500 transition-colors">{competitorName}</a>:</strong>{" "}{bestForCompetitor}
    </Text>
    <Text tag="p" variant="textSM" class="text-base-500">
      <strong class="text-base-700"><a href="https://www.vows.you" class="border-b border-base-400 hover:text-accent-500 hover:border-accent-500 transition-colors">vows.you</a>:</strong>{" "}{bestForVowsYou}
    </Text>
  </div>
  <div class="flex flex-wrap gap-3 mt-5">
    <a
      href="https://www.vows.you/free-wedding-vow-review"
      class="inline-block px-5 py-2 text-sm font-medium text-white bg-accent-500 rounded-full hover:bg-accent-600 transition-colors"
    >
      Try the free vow review
    </a>
    <a
      href="https://app.vows.you"
      class="inline-block px-5 py-2 text-sm font-medium text-base-700 bg-white border border-base-200 rounded-full hover:text-accent-500 transition-colors"
    >
      Start writing in the app
    </a>
  </div>
</div>
