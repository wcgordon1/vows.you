---
import Text from "@/components/fundations/elements/Text.astro";

interface Props {
  competitorName: string;
  pickCompetitor: string[];
  pickVowsYou: string[];
}

const { competitorName, pickCompetitor, pickVowsYou } = Astro.props;
---

<div id="final-verdict" class="mt-12 p-6 bg-sand-100 rounded-xl">
  <Text tag="h2" variant="textLG" class="font-medium text-base-800">
    Final verdict: Vows.you or {competitorName}
  </Text>

  <div class="mt-5 grid gap-6 sm:grid-cols-2">
    <div>
      <p class="text-sm font-medium text-base-700 mb-2">
        {competitorName} if you:
      </p>
      <ul class="space-y-1.5 list-none pl-0">
        {
          pickCompetitor.map((item) => (
            <li class="text-sm text-base-500 flex gap-2">
              <span class="text-base-400 shrink-0">&#8226;</span>
              {item}
            </li>
          ))
        }
      </ul>
    </div>
    <div>
      <p class="text-sm font-medium text-base-700 mb-2">
        Pick vows.you if you:
      </p>
      <ul class="space-y-1.5 list-none pl-0">
        {
          pickVowsYou.map((item) => (
            <li class="text-sm text-base-500 flex gap-2">
              <span class="text-accent-500 shrink-0">&#8226;</span>
              {item}
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="flex flex-wrap gap-3 mt-6">
    <a
      href="https://www.vows.you/free-wedding-vow-review"
      class="inline-block px-5 py-2 text-sm font-medium text-white bg-accent-500 rounded-full hover:bg-accent-600 transition-colors"
    >
      Try the free vow review
    </a>
    <a
      href="https://app.vows.you"
      class="inline-block px-5 py-2 text-sm font-medium text-base-700 bg-white border border-base-200 rounded-full hover:text-accent-500 transition-colors"
    >
      Start writing in the app
    </a>
  </div>
</div>
