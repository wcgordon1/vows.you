---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundatons
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
const footerLinks = [
  {
    heading: "Product",
    links: [
      { label: "Start writing", href: "/#pricing-section" },
      { label: "See examples", href: "/guides" },
      { label: "Pricing", href: "/#pricing-section" },
      { label: "Changelog", href: "/changelog" },
    ],
  },
  {
    heading: "Resources",
    links: [
      {
        label: "Guides",
        href: "/guides",
      },
      {
        label: "Support",
        href: "/support",
      },
      {
        label: "Couples",
        href: "/couples",
      },
    ],
  },
  {
    heading: "Company",
    links: [
      {
        label: "About",
        href: "/about",
      },
      {
        label: "Contact",
        href: "/contact",
      },
    ],
  },
  {
    heading: "Legal",
    links: [
      {
        label: "Privacy",
        href: "/legal/privacy",
      },
      {
        label: "Terms",
        href: "/legal/terms",
      },
    ],
  },
];
---
<footer class="border-t border-base-200 border-dashed">
  <Wrapper variant="standard" class="py-12">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="text-black">
        <a
          href="/"
          class="flex items-center font-serif text-lg gap-2 text-accent-900"
        >
          <span class="sr-only">Go to homepage</span>
          <Logo class="h-4 text-base-900" />
          vows.you
        </a>
        <p class="mt-1 text-sm font-normal text-base-500 text-balance">
          Write wedding vows that sound like you. Personal, not generic.
        </p>
      </div>
      <div class="md:grid md:grid-cols-2 xl:grid-cols-4 md:gap-8 xl:col-span-2">
        {
          footerLinks.map((section) => (
            <div class="mt-12 md:mt-0">
              <h3 class="text-black font-display">{section.heading}</h3>
              <ul role="list" class="mt-4 text-sm space-y-2 text-base-500">
                {section.links.map((link) => (
                  <li>
                    <a
                      title="Button to your page"
                      aria-label="your label"
                      href={link.href}
                      class="hover:text-black"
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </Wrapper>
</footer>
