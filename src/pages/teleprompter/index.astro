---
import BaseLayout from "@/layouts/BaseLayout.astro"
import Wrapper from "@/components/fundations/containers/Wrapper.astro"
import Text from "@/components/fundations/elements/Text.astro"
import TeleprompterInput from "@/components/teleprompter/TeleprompterInput"
import JsonLd from "@/components/fundations/head/JsonLd.astro"

const SITE_URL = "https://vows.you";

const webAppSchema = {
	"@context": "https://schema.org",
	"@type": "WebApplication",
	"name": "Free Wedding Vow Teleprompter",
	"url": `${SITE_URL}/teleprompter`,
	"applicationCategory": "LifestyleApplication",
	"operatingSystem": "Web",
	"offers": {
		"@type": "Offer",
		"price": "0",
		"priceCurrency": "USD"
	},
	"description": "Practice reading your wedding vows with a free, smooth-scrolling teleprompter. Adjustable speed, word-by-word highlighting, fullscreen, and mirror mode.",
	"featureList": [
		"Smooth auto-scrolling teleprompter",
		"Word-by-word highlighting",
		"Adjustable reading speed",
		"Fullscreen practice mode",
		"Mirror mode for rehearsing",
		"Markdown and BBCode formatting support",
		"Privacy-first (browser-only)"
	]
};

const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		{
			"@type": "ListItem",
			"position": 1,
			"name": "Home",
			"item": SITE_URL
		},
		{
			"@type": "ListItem",
			"position": 2,
			"name": "Wedding Vow Teleprompter",
			"item": `${SITE_URL}/teleprompter`
		}
	]
};
---

<BaseLayout
	title="Free Wedding Vow Teleprompter - Practice Reading Your Vows | vows.you"
	description="Practice reading your wedding vows with a free, smooth-scrolling teleprompter. Word-by-word highlighting, adjustable speed, fullscreen mode, and mirror mode. No sign-up required."
>
	<JsonLd slot="head" data={webAppSchema} />
	<JsonLd slot="head" data={breadcrumbSchema} />

	<section>
		<Wrapper variant="standard" class="pt-32 pb-16">
			<header class="max-w-2xl mb-10">
				<p class="text-sm font-medium uppercase tracking-wide text-accent-500 mb-4">
					Free Tool
				</p>
				<Text tag="h1" variant="displayMD" class="font-serif font-medium tracking-tight text-base-900 mb-5">
					Wedding Vow Teleprompter
				</Text>
				<Text tag="p" variant="textLG" class="text-base-600 leading-relaxed">
					Paste your vows below and practice reading them at your own pace. The teleprompter scrolls smoothly and highlights each word so you can rehearse your timing and delivery.
				</Text>
				<p class="text-sm text-base-500 mt-4 flex items-center gap-2">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-600">
						<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
					</svg>
					Your text stays in your browser. Nothing is sent to a server.
				</p>
			</header>

			<TeleprompterInput client:load />
		</Wrapper>
	</section>

	<!-- Features -->
	<section class="border-t border-base-200 border-dashed">
		<Wrapper variant="standard" class="py-16">
			<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
				<div>
					<div class="flex items-center justify-center w-10 h-10 rounded-xl bg-accent-50 text-accent-500 mb-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<polygon points="6 3 20 12 6 21 6 3"/>
						</svg>
					</div>
					<h3 class="font-medium text-base-800 mb-1">Smooth Auto-Scroll</h3>
					<p class="text-sm text-base-500">Text scrolls at a natural reading pace with three speed presets tuned for spoken vows.</p>
				</div>
				<div>
					<div class="flex items-center justify-center w-10 h-10 rounded-xl bg-accent-50 text-accent-500 mb-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M12 20h9"/>
							<path d="M16.376 3.622a1 1 0 0 1 3.002 3.002L7.368 18.635a2 2 0 0 1-.855.506l-2.872.838a.5.5 0 0 1-.62-.62l.838-2.872a2 2 0 0 1 .506-.854z"/>
						</svg>
					</div>
					<h3 class="font-medium text-base-800 mb-1">Word Highlighting</h3>
					<p class="text-sm text-base-500">Each word lights up as you go, helping you keep your place and nail your pacing.</p>
				</div>
				<div>
					<div class="flex items-center justify-center w-10 h-10 rounded-xl bg-accent-50 text-accent-500 mb-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M8 3H5a2 2 0 0 0-2 2v3"/>
							<path d="M21 8V5a2 2 0 0 0-2-2h-3"/>
							<path d="M3 16v3a2 2 0 0 0 2 2h3"/>
							<path d="M16 21h3a2 2 0 0 0 2-2v-3"/>
						</svg>
					</div>
					<h3 class="font-medium text-base-800 mb-1">Fullscreen Mode</h3>
					<p class="text-sm text-base-500">Go fullscreen for a distraction-free rehearsal. Works beautifully on phones and tablets.</p>
				</div>
				<div>
					<div class="flex items-center justify-center w-10 h-10 rounded-xl bg-accent-50 text-accent-500 mb-3">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
							<path d="M8 3v3a2 2 0 0 1-2 2H3"/>
							<path d="M21 8h-3a2 2 0 0 1-2-2V3"/>
							<path d="M3 16h3a2 2 0 0 1 2 2v3"/>
							<path d="M16 21v-3a2 2 0 0 1 2-2h3"/>
						</svg>
					</div>
					<h3 class="font-medium text-base-800 mb-1">Mirror Mode</h3>
					<p class="text-sm text-base-500">Flip the text horizontally to practice facing someone, just like a real teleprompter.</p>
				</div>
			</div>
		</Wrapper>
	</section>

	<!-- CTA to app -->
	<section class="border-t border-base-200 border-dashed">
		<Wrapper variant="standard" class="py-12">
			<div class="max-w-xl mx-auto text-center">
				<Text tag="h2" variant="displaySM" class="font-serif font-medium text-base-900">
					Need help writing your vows?
				</Text>
				<Text tag="p" variant="textBase" class="mt-4 text-base-500">
					Our free wedding vows template walks you through prompts to generate ceremony-ready vows in minutes.
				</Text>
				<a
					href="/wedding-vows-template"
					class="inline-flex items-center gap-2 mt-6 px-6 py-3 text-sm font-semibold text-white bg-accent-500 rounded-full hover:bg-accent-600 transition-colors"
				>
					Try Free Vows Template
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M5 12h14"/>
						<path d="m12 5 7 7-7 7"/>
					</svg>
				</a>
			</div>
		</Wrapper>
	</section>
</BaseLayout>
