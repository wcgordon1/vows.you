---
import BaseLayout from "@/layouts/BaseLayout.astro"
import Text from "@/components/fundations/elements/Text.astro"
import Button from "@/components/fundations/elements/Button.astro"
import Wrapper from "@/components/fundations/containers/Wrapper.astro"
import CtaSignUp from "@/components/ctas/CtaSignUp.astro"
import JsonLd from "@/components/fundations/head/JsonLd.astro"

const SITE_URL = "https://vows.you"

const tools = [
	{
		title: "Wedding Vows Template",
		href: "/wedding-vows-template",
		description: "Answer a few guided prompts and generate a personal, ceremony-ready wedding vow in minutes. Download as PDF or DOCX.",
		icon: "template",
	},
	{
		title: "Wedding Vow Review",
		href: "/free-wedding-vow-review",
		description: "Paste your vows to check word count, read time, and detect clichéd or overused phrases. Get rewrite suggestions instantly.",
		icon: "review",
	},
	{
		title: "Practice Your Vows",
		href: "/practice-wedding-vows",
		description: "Rehearse reading your vows aloud with a smooth-scrolling teleprompter. Word-by-word highlighting keeps you on pace.",
		icon: "practice",
	},
	{
		title: "Wedding Vow Cards",
		href: "/wedding-vow-cards",
		description: "Turn your finished vows into a beautiful, print-ready card. Choose backgrounds, fonts, and download a PDF sized for ceremony day.",
		icon: "cards",
	},
]

const steps = [
	{
		number: "01",
		title: "Write or generate",
		description: "Start from scratch or use our template generator. Answer guided prompts about your partner, your story, and the promises you want to make.",
	},
	{
		number: "02",
		title: "Review and refine",
		description: "Run your vows through the cliché checker. See highlighted weak phrases, get rewrite suggestions, and check your timing.",
	},
	{
		number: "03",
		title: "Practice out loud",
		description: "Use the teleprompter to rehearse reading your vows at a natural pace. Build confidence before the ceremony.",
	},
	{
		number: "04",
		title: "Print and carry",
		description: "Design a vow card with your favorite background and font. Download a print-ready PDF to hold during the ceremony.",
	},
]

const benefits = [
	{
		title: "No sign-up required",
		description: "Every tool works immediately. No account, no email, no paywall.",
		icon: "unlock",
	},
	{
		title: "Privacy-first",
		description: "Your vows never leave your browser. Nothing is sent to a server or stored in a database.",
		icon: "shield",
	},
	{
		title: "Works on any device",
		description: "Phone, tablet, or desktop. Every tool is fully responsive and works offline after loading.",
		icon: "device",
	},
	{
		title: "Designed for real couples",
		description: "Built by people who have been through the vow-writing process. No filler, no fluff.",
		icon: "heart",
	},
]

const faqs = [
	{
		question: "Are these wedding vow tools really free?",
		answer: "Yes, completely free with no sign-up or credit card required. All four tools - the template generator, cliché checker, teleprompter, and vow card designer - are free to use as many times as you want.",
	},
	{
		question: "Is my data private? Do you store my vows?",
		answer: "Your vows never leave your browser. All processing happens locally on your device. We don't send your text to any server, and nothing is stored in a database. Your words are yours alone.",
	},
	{
		question: "What's the best order to use these tools?",
		answer: "Start with the Wedding Vows Template to generate a first draft from guided prompts. Then run it through the Wedding Vow Review to catch clichés and check timing. Practice reading with the Teleprompter until you feel confident. Finally, design a Vow Card to hold during the ceremony.",
	},
	{
		question: "How long should wedding vows be?",
		answer: "Most wedding vows run between 1 and 2.5 minutes when read aloud, which is roughly 150 to 350 words. Anything under a minute can feel rushed, and anything over three minutes risks losing the room. Our review tool shows your exact read time so you can adjust.",
	},
	{
		question: "Can I use these tools on my phone?",
		answer: "Yes. Every tool is fully responsive and works on phones, tablets, and desktops. The teleprompter even has a fullscreen mode for distraction-free practice on mobile.",
	},
	{
		question: "Do I need to write my vows before using these tools?",
		answer: "Not at all. The Wedding Vows Template is designed for people starting from scratch. Answer a few prompts about your relationship and it generates a complete vow draft you can edit and make your own.",
	},
	{
		question: "Can I download or print my vows?",
		answer: "Yes. The template generator lets you download your vows as a PDF or DOCX file. The vow card tool creates a beautifully designed, print-ready PDF sized for 4x6 photo prints or half-letter booklets.",
	},
]

const breadcrumbSchema = {
	"@context": "https://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
		{
			"@type": "ListItem",
			"position": 1,
			"name": "Home",
			"item": SITE_URL,
		},
		{
			"@type": "ListItem",
			"position": 2,
			"name": "Free Wedding Vow Tools",
			"item": `${SITE_URL}/tools`,
		},
	],
}

const faqSchema = {
	"@context": "https://schema.org",
	"@type": "FAQPage",
	"mainEntity": faqs.map((faq) => ({
		"@type": "Question",
		"name": faq.question,
		"acceptedAnswer": {
			"@type": "Answer",
			"text": faq.answer,
		},
	})),
}

const webAppSchema = {
	"@context": "https://schema.org",
	"@type": "WebApplication",
	"name": "Free Wedding Vow Tools",
	"url": `${SITE_URL}/tools`,
	"applicationCategory": "LifestyleApplication",
	"operatingSystem": "Web",
	"offers": {
		"@type": "Offer",
		"price": "0",
		"priceCurrency": "USD",
	},
	"description": "Free tools to write, review, practice, and print your wedding vows. No sign-up required. Privacy-first and fully in-browser.",
	"featureList": [
		"Guided wedding vow template generator",
		"Cliché and weak phrase detection",
		"Read time and word count analysis",
		"Smooth-scrolling teleprompter with word highlighting",
		"Print-ready vow card PDF export",
		"Privacy-first (browser-only processing)",
	],
}
---

<BaseLayout
	title="Free Wedding Vow Tools - Write, Review, Practice & Print | vows.you"
	description="Free tools to write, review, practice, and print your wedding vows. Generate vows from prompts, check for clichés, rehearse with a teleprompter, and design print-ready cards. No sign-up required."
>
	<JsonLd slot="head" data={breadcrumbSchema} />
	<JsonLd slot="head" data={faqSchema} />
	<JsonLd slot="head" data={webAppSchema} />

	<!-- Hero + Tool Cards -->
	<section>
		<Wrapper variant="standard" class="pt-32 pb-4">
			<div class="max-w-2xl text-balance">
				<p class="text-sm font-medium uppercase tracking-wide text-accent-500 mb-4">
					Free, private, no sign-up
				</p>
				<Text
					tag="h1"
					variant="displayMD"
					class="font-serif font-medium tracking-tight text-black"
				>
					Free Wedding Vow Tools
				</Text>
				<Text tag="p" variant="textLG" class="mt-4 text-base-500">
					Everything you need to write, review, practice, and print your wedding vows. All tools run in your browser. Your words stay private.
				</Text>
			</div>

			<div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
				{tools.map((tool) => (
					<a
						href={tool.href}
						class="group block rounded-2xl border border-base-200 p-6 hover:border-base-300 hover:shadow-lg transition-all duration-300"
					>
						<div class="flex items-center justify-center w-12 h-12 rounded-xl bg-gradient-to-br from-accent-100 to-accent-50 text-accent-600 mb-5 group-hover:-rotate-6 group-hover:-translate-y-1 transition-transform duration-300">
							{tool.icon === "template" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M12 20h9" />
									<path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z" />
								</svg>
							)}
							{tool.icon === "review" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
									<path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
								</svg>
							)}
							{tool.icon === "practice" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<polygon points="6 3 20 12 6 21 6 3" />
								</svg>
							)}
							{tool.icon === "cards" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
									<path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z" />
									<polyline points="14 2 14 8 20 8" />
								</svg>
							)}
						</div>
						<Text tag="h2" variant="textLG" class="font-serif font-medium text-base-900 group-hover:text-accent-600 transition-colors">
							{tool.title}
						</Text>
						<p class="mt-2 text-sm text-base-500 leading-relaxed">
							{tool.description}
						</p>
						<span class="inline-flex items-center gap-1.5 mt-4 text-sm font-medium text-accent-600 group-hover:gap-2.5 transition-all">
							Try it free
							<svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M5 12h14" />
								<path d="m12 5 7 7-7 7" />
							</svg>
						</span>
					</a>
				))}
			</div>
		</Wrapper>
	</section>

	<!-- How It Works -->
	<section class="overflow-hidden">
		<Wrapper variant="standard" class="py-16 border-t border-base-200 border-dashed">
			<div class="text-center text-balance">
				<Text
					tag="h2"
					variant="displaySM"
					class="font-serif font-medium tracking-tight text-black"
				>
					From blank page to ceremony-ready
				</Text>
				<Text
					tag="p"
					variant="textBase"
					class="max-w-xl mx-auto mt-4 text-base-500"
				>
					Use the tools in order or jump to the one you need. Each one is designed to work on its own or as part of the full workflow.
				</Text>
			</div>

			<div class="grid gap-8 mt-12 md:grid-cols-2 lg:grid-cols-4">
				{steps.map((step) => (
					<div class="relative p-6 bg-sand-50 rounded-2xl">
						<span class="text-4xl font-serif text-sand-300">{step.number}</span>
						<Text
							tag="h3"
							variant="textLG"
							class="mt-4 font-medium text-black"
						>
							{step.title}
						</Text>
						<Text tag="p" variant="textSM" class="mt-2 text-base-500">
							{step.description}
						</Text>
					</div>
				))}
			</div>
		</Wrapper>
	</section>

	<!-- Why These Tools -->
	<section>
		<Wrapper variant="standard" class="pt-12 pb-4 border-t border-base-200 border-dashed">
			<div class="max-w-xl text-balance">
				<Text
					tag="h2"
					variant="displaySM"
					class="font-serif font-medium tracking-tight text-black"
				>
					Built for couples, not corporations
				</Text>
				<Text tag="p" variant="textBase" class="mt-4 text-base-500">
					Every tool is free, private, and designed to help you write vows that sound like you.
					We'll never sell your data or use it for any purpose other than to help you write your vows.
				</Text>
			</div>
			<div class="items-center mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2">
				{benefits.map((benefit) => (
					<div class="flex flex-col h-full p-4 bg-sand-100 rounded-xl group hover:bg-white hover:shadow-2xl duration-300 outline-transparent hover:outline hover:outline-sand-100">
						<div class="inline-flex p-4 bg-white rounded-lg group-hover:bg-sand-100 duration-300 group-hover:-rotate-12 group-hover:-translate-y-2 w-fit">
							{benefit.icon === "unlock" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
									<rect width="18" height="11" x="3" y="11" rx="2" ry="2" />
									<path d="M7 11V7a5 5 0 0 1 9.9-1" />
								</svg>
							)}
							{benefit.icon === "shield" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
									<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
									<path d="m9 12 2 2 4-4" />
								</svg>
							)}
							{benefit.icon === "device" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
									<rect width="14" height="20" x="5" y="2" rx="2" ry="2" />
									<path d="M12 18h.01" />
								</svg>
							)}
							{benefit.icon === "heart" && (
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent-500">
									<path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z" />
								</svg>
							)}
						</div>
						<Text
							tag="h3"
							variant="textSM"
							class="mt-12 font-medium text-base-900"
						>
							{benefit.title}
						</Text>
						<Text tag="p" variant="textSM" class="mt-2 text-base-500">
							{benefit.description}
						</Text>
					</div>
				))}
			</div>
		</Wrapper>
	</section>

	<!-- CTA -->
	<CtaSignUp variant="banner" />

	<!-- FAQ -->
	<section class="border-t border-base-200 border-dashed">
		<Wrapper variant="standard" class="py-16">
			<div class="max-w-2xl">
				<Text
					tag="h2"
					variant="displaySM"
					class="font-serif font-medium text-base-900 mb-8"
				>
					Frequently asked questions
				</Text>
				<div class="divide-y divide-base-200">
					{faqs.map((faq) => (
						<details class="group py-5">
							<summary class="flex items-center justify-between cursor-pointer list-none text-base font-medium text-base-800 hover:text-base-900">
								{faq.question}
								<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 ml-4 text-base-400 transition-transform group-open:rotate-180">
									<path d="m6 9 6 6 6-6" />
								</svg>
							</summary>
							<p class="mt-3 text-sm text-base-600 leading-relaxed">
								{faq.answer}
							</p>
						</details>
					))}
				</div>
			</div>
		</Wrapper>
	</section>
</BaseLayout>
