---
// Assets
import { Image } from "astro:assets";
import Avatar from "@/images/assets/contact.jpeg";
import Logo from "@/components/assets/Logo.astro";
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
---

<BaseLayout
  hideNav={true}
  hideFooter={true}
  title="Contact Us | vows.you"
  description="Get in touch with the vows.you team. Questions, partnership inquiries, or just want to say hello? We'd love to hear from you."
>
  <div class="flex h-screen">
    <div
      class="flex items-center justify-center w-full p-8 bg-sand-100 lg:w-2/3"
    >
      <div class="w-full max-w-md py-24 lg:py-32">
        <div class="text-center">
          <Text
            tag="h1"
            variant="displayMD"
            class="font-serif font-medium tracking-tight text-black"
          >
            Get in touch
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="max-w-xl mx-auto mt-4 text-base-500 text-balance"
          >
            Questions about vows.you? Need help? Interested in partnerships or press? We'd love to hear from you.
          </Text>
        </div>
        <div class="mt-10 space-y-6">
          <div class="p-6 bg-white rounded-xl ring-1 ring-base-200">
            <Text tag="h2" variant="textBase" class="font-medium text-base-900">
              Email us
            </Text>
            <Text tag="p" variant="textSM" class="mt-1 text-base-500">
              We respond to most messages within 24 hours.
            </Text>
            <a
              href="mailto:hello@vows.you"
              class="inline-flex items-center gap-2 mt-3 text-sm font-medium text-accent-600 hover:text-accent-700"
            >
              hello@vows.you
            </a>
          </div>
          <div class="p-6 bg-white rounded-xl ring-1 ring-base-200">
            <Text tag="h2" variant="textBase" class="font-medium text-base-900">
              Refunds
            </Text>
            <Text tag="p" variant="textSM" class="mt-1 text-base-500">
              Not satisfied? Email us within 30 days for a full refund. No questions asked.
            </Text>
          </div>
          <div class="p-6 bg-white rounded-xl ring-1 ring-base-200">
            <Text tag="h2" variant="textBase" class="font-medium text-base-900">
              Press & partnerships
            </Text>
            <Text tag="p" variant="textSM" class="mt-1 text-base-500">
              For press inquiries, partnerships, or anything else: reach out to the same email. We read every message.
            </Text>
          </div>
        </div>
      </div>
    </div>
    <div
      class="relative hidden overflow-hidden lg:block lg:w-1/3 lg:order-first"
    >
      <Image
        src={Avatar}
        alt="Wedding stationery on linen surface"
        aria-hidden="true"
        width="1200"
        height="1200"
        loading="lazy"
        decoding="async"
        class="object-cover object-center w-full h-full bg-base-50"
      />
      <div
        aria-hidden="true"
        class="absolute inset-0 pointer-events-none bg-sand-800/50"
      >
      </div>
      <div
        class="absolute inset-0 flex flex-col items-center justify-between p-8 text-center"
      >
        <div>
          <a href="/">
            <span class="sr-only">Back to home</span>
            <Logo class="h-4 mx-auto text-white" />
          </a>
          <Text tag="p" variant="textXL" class="mt-4 font-medium text-white">
            We're here to help <br />
            with your vows
          </Text>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
