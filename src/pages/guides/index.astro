---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Component
import BlogCard from "@/components/blog/BlogCard.astro";
import BlogSearch from "@/components/blog/BlogSearch.astro";
// Sections
import Subscribe from "@/components/blog/Subscribe.astro";
// Content
import { getCollection } from "astro:content";
const allPostsUnsorted = await getCollection("posts");
// Sort the posts in descending order by publication date (newest to oldest)
const allPosts = allPostsUnsorted.sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);
// Tags
const tags = [...new Set(allPosts.map((post) => post.data.tags).flat())];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-4">
      <div class="max-w-xl text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-serif font-medium tracking-tight text-black"
        >
          Guides for writing vows
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          Tips, examples, and advice for writing wedding vows that sound like you.
        </Text>
      </div>
      <div class="flex items-center mt-8 gap-2">
        <BlogSearch />
        <div
          class="relative flex h-full overflow-x-scroll gap-2 scrollable-content snap-x snap-proximity scrollbar-hide"
        >
          {
            tags.map((tag) => (
              <Button
                isLink
                size="xs"
                variant="muted"
                title={tag}
                aria-label={tag}
                href={`/guides/tags/${tag}`}
                class="capitalize text-base-500"
              >
                {tag}
              </Button>
            ))
          }
        </div>
      </div>

      <div
        class="mt-12 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 gap-y-24"
      >
        {allPosts.map((post) => <BlogCard post={post} />)}
      </div>
    </Wrapper>
  </section>
  <Subscribe />
</BaseLayout>
