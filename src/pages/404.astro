---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout title="Page Not Found | vows.you" description="The page you're looking for doesn't exist." noindex={true}>
  <section>
    <Wrapper
      variant="standard"
      class="flex flex-col items-center justify-center pt-32 pb-4 lg:h-svh bg-sand-50"
    >
      <div class="text-center text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-serif font-medium tracking-tight text-black"
        >
          Page not found
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="max-w-xl mx-auto mt-4 text-base-500"
        >
          The page you're looking for doesn't exist. It may have been moved or removed. Let's get you back on track.
        </Text>
      </div>
      <div
        class="flex flex-wrap items-center justify-center w-full mt-10 gap-2"
      >
        <Button isLink size="sm" variant="accent" href="/"
          >Go home</Button
        >
        <Button isLink size="sm" variant="muted" href="/contact"
          >Contact us</Button
        >
      </div>
    </Wrapper>
  </section>
</BaseLayout>
