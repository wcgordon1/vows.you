---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import HelpCenterCard from "@/components/helpcenter/HelpCenterCard.astro";
// Sections
import Faq1 from "@/components/faqs/Faq1.astro";
// Content
import { getCollection } from "astro:content";
// Content
const allEntries = await getCollection("helpcenter");
---

<BaseLayout
  title="Guides & Support | vows.you"
  description="Find answers to common questions about writing vows and using vows.you. Get the help you need to write vows you'll be proud of."
>
  <section>
    <Wrapper variant="standard" class="pt-32 pb-4">
      <div class="max-w-xl mx-auto text-center text-balance">
        <Text
          tag="h1"
          variant="displayMD"
          class="font-serif font-medium tracking-tight text-black"
        >
          Guides & Support
        </Text>
        <Text tag="p" variant="textBase" class="mt-4 text-base-500">
          Find answers to common questions about writing vows and using vows.you.
        </Text>
      </div>

      <div
        class="items-center mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2"
      >
        {allEntries.map((post) => <HelpCenterCard post={post} />)}
      </div>
    </Wrapper>
  </section>
  <Faq1 />
</BaseLayout>
